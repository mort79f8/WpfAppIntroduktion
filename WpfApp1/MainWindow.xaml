            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--#region buttons-->
        <Button x:Name="buttonOpg12"
                Grid.Column="0"
                Grid.Row="0"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Content="Opgave 1.2"
                Click="buttonOpg12_Click" />
        
        <Button x:Name="buttonOpg13"
                Grid.Column="0"
