                Content="Opgave 1.10" />
        <!--#endregion-->

        <ListBox x:Name="listBoxRes"
                 Grid.Column="1"
                 Grid.Row="0"
                 Grid.RowSpan="9"
                 Margin="5" />
    </Grid>
</Window>
